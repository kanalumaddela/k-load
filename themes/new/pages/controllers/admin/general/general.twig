{% extends 'app.twig' %}

{% block title %}General{% endblock %}


{% block content %}
    <div class="container px-4 py-6">
        <div class="columns is-multiline is-mobile">
            <div class="column">
                <div class="card quick-settings">
                    <div class="card-header-title">
                        {{ lang('general') }}
                    </div>
                    <div class="card-content">
                        <form action="{{ site.current }}" method="post">
                            {{ csrf }}

                            <div class="columns is-multiline is-mobile">
                                <div class="column is-two-thirds-fullhd is-full-desktop mb-2">
                                    <div class="pt-4">
                                        {% if can('community_name') %}
                                            <div class="field is-horizontal">
                                                <div class="field-label">
                                                    <label class="label">{{ lang('community_name') }}</label>
                                                </div>
                                                <div class="field-body">
                                                    <input class="input" type="text" name="community_name"
                                                           value="{{ old.community_name|default(settings.community_name) }}">
                                                </div>
                                            </div>
                                            <div class="field is-horizontal">
                                                <div class="field-label">
                                                    <label class="label">{{ lang('description') }}</label>
                                                </div>
                                                <div class="field-body">
                                                    <input class="input" type="text" name="description"
                                                           value="{{ old.description|default(settings.description) }}">
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="column is-one-third-fullhd is-full-desktop">
                                    <div>
                                        <h1 class="header has-text-centered">Logo</h1>
                                        <div class="is-boxed">
                                            <p>Your logo here</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="has-text-centered">
                                <button class="button">{{ lang('save') }}</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}