<!doctype html>
<html lang="en">
<head>
    <title>{% block title %}{% endblock %}</title>
    <meta charset="utf-8"/>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="dns-prefetch" href="https://steamcdn-a.akamaihd.net">
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="{{ assets }}/css/loading.css?{{ cache_buster }}">
    {% block css %}{% endblock %}
    {% if user.steamid and css_exists %}
        <link rel="stylesheet" href="{{ site.path }}/data/users/{{ user.steamid }}.css?{{ cache_buster }}">
    {% endif %}
</head>
<body>
{% block body %}{% endblock %}
<script>
    var site = {{ site_json|default('{}')|raw }};
    var backgrounds = {{ settings.backgrounds|default('{}')|raw }};
    backgrounds.list = {{ backgrounds|default('{}')|raw }};
    var youtube = {{ settings.youtube|default('{}')|raw }};
    var messages = {{ settings.messages|default('{}')|raw }};
    var rules = {{ settings.rules|default('{}')|raw }};
    var staff = {{ settings.staff|default('{}')|raw }};
    var music = {{ settings.music|default('{}')|raw }};
    var rules_per_page = staff_per_page = 7;
    var rules_fade_delay = staff_fade_delay = 750;
</script>
{% block js %}{% endblock %}
<script src="{{ assets }}/js/loading-improved.js?{{ cache_buster }}"></script>
</body>
</html>
