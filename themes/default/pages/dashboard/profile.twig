{% extends 'base.twig' %}

{% block title %}{{ player.name|default(player.steamid) }} | K-Load{% endblock %}
{% block nav_title %}User: {{ player.name|default(player.steamid) }} [{{ player.id }}]{% endblock %}

{% block head %}
    <meta property="og:title" content="{{ player.name|default(player.steamid) }} | K-Load"/>
    <meta property="og:description" content="{{ player.name|default(player.steamid) }}'s settings on K-Load"/>
    <meta property="og:url" content="{{ site.current }}"/>
    <meta property="og:image" content="{{ site.path }}/api/player/{{ player.steamid }}/avatarfull?raw"/>
    <link rel="icon" type="image/png" sizes="32x32" href="{{ site.path }}/api/player/{{ player.steamid }}/avatar?raw">
{% endblock %}

{% block css_body %}
    <style>
        .col.s12.m3 > img {
            width: 100%;
        }

        .card .card-content p {
            margin: 8px 0;
        }

        .col.s12.m6 > .card {
            height: 200px;
        }

        .settings .col > p {
            margin: 0;
        }

        .settings [type="checkbox"] + span {
            padding-left: 20px;
        }

        @media only screen and (min-width: 601px) {
            .col.s12.m3 {
                width: 22%;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="row" style="margin-top: 20px;">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <div class="row valign-wrapper">
                        <div class="col s12 m3 center-align">
                            <img class="avatar" style="max-width: 150px;" src="{{ site.path }}/api/player/{{ player.steamid }}/avatarfull?raw">
                        </div>
                        <div class="col s12 m9 center-align">
                            <table class="responsive-table">
                                <tbody>
                                <tr>
                                    <td>{{ lang('name') }}:</td>
                                    <td>{{ player.name|default('unknown') }}</td>
                                </tr>
                                <tr>
                                    <td>{{ lang('steamids') }}:</td>
                                    <td><pre style="margin: 0;">{{ player.steamid }}<br>{{ player.steamid2 }}<br>{{ player.steamid3 }}</pre></td>
                                </tr>
                                <tr>
                                    <td>{{ lang('loading_screen') }}:</td>
                                    <td><a href="{{ site.path }}/?steamid={{ player.steamid }}" target="_blank">{{ site.url }}/?steamid={{ player.steamid }}</a></td>
                                </tr>
                                <tr>
                                    <td>{{ lang('registered') }}:</td>
                                    <td>{{ player.registered }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title"><span class="mdi mdi-panorama left"></span>{{ lang('backgrounds') }}</span>
                    <div class="row settings">
                        <div class="col s12">
                            {{ lang('enabled') }}
                            <p class="right">
                                <input type="checkbox"
                                       {% if player.settings.backgrounds.enable %}checked="checked"{% endif %} />
                                <span></span>
                            </p>
                        </div>
                        <div class="col s12">
                            {{ lang('random') }}
                            <p class="right">
                                <input type="checkbox"
                                       {% if player.settings.backgrounds.random %}checked="checked"{% endif %} />
                                <span></span>
                            </p>
                        </div>
                        <div class="col s12">
                            <p>{{ lang('duration') }}: <span class="right">{{ player.settings.backgrounds.duration }}</span></p>
                        </div>
                        <div class="col s12">
                            <p>{{ lang('fade') }}: <span class="right">{{ player.settings.backgrounds.fade }}</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title"><span class="mdi mdi-music left"></span>YouTube/{{ lang('music') }}</span>
                    <div class="row settings">
                        <div class="col s12">
                            {{ lang('enabled') }}
                            <p class="right">
                                <input type="checkbox"
                                       {% if player.settings.youtube.enable %}checked="checked"{% endif %} />
                                <span></span>
                            </p>
                        </div>
                        <div class="col s12">
                            {{ lang('random') }}
                            <p class="right">
                                <input type="checkbox"
                                       {% if player.settings.youtube.random %}checked="checked"{% endif %} />
                                <span></span>
                            </p>
                        </div>
                        <div class="col s12">
                            <p>{{ lang('volume') }}: <span class="right">{{ player.settings.youtube.volume }}</span></p>
                        </div>
                        {% if player.settings.youtube.list %}
                            <div class="col s12 center-align">
                                <button class="btn modal-trigger" data-target="youtube_videos">{{ lang('videos') }}</button>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title"><span class="mdi mdi-language-css3 left"></span>CSS</span>
                    <pre>{{ player.css }}</pre>
                </div>
            </div>
        </div>
    </div>
    {% if player.settings.youtube.list %}
        <div id="youtube_videos" class="modal">
            <div class="modal-content">
                {% for id in player.settings.youtube.list %}
                    <a href="https://www.youtube.com/watch?v={{ id }}"
                       target="_blank">https://www.youtube.com/watch?v={{ id }}</a>
                    <br>
                {% endfor %}
            </div>
            <div class="modal-footer">
                <a href="#" class="modal-action modal-close waves-effect btn-flat">{{ lang('close') }}</a>
            </div>
        </div>
    {% endif %}
    {% if player.steamid != user.steamid %}
        <div class="fixed-action-btn">
            <a class="btn-floating btn-large blue">
                <span class="mdi mdi-account-settings large"></span>
            </a>
            <ul>
                <li>
                    <a class="btn-floating tooltipped pink copy-user" data-tooltip="{{ lang('copy_user_settings') }}"
                       data-position="left" data-steamid="{{ player.steamid }}">
                        <span class="mdi mdi-content-copy"></span>
                    </a>
                </li>
                {% if not player.banned and (perms.ban or user.super) %}
                    <li>
                        <a class="btn-floating tooltipped red ban-user" data-tooltip="{{ lang('ban_user') }}" data-position="left"
                           data-steamid="{{ player.steamid }}">
                            <span class="mdi mdi-gavel"></span>
                        </a>
                    </li>
                {% elseif player.banned and (perms.unban or user.super) %}
                    <li>
                        <a class="btn-floating tooltipped green unban-user" data-tooltip="{{ lang('unban_user') }}"
                           data-position="left" data-steamid="{{ player.steamid }}">
                            <span class="mdi mdi-lock-open-outline"></span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    {% endif %}
{% endblock %}

{% block js %}
    <script>
        $('.modal').modal();
        $(document).ready(function () {
            $('.fixed-action-btn').floatingActionButton();
        });
    </script>
{% endblock %}
